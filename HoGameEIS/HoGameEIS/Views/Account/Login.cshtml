@{
    ViewBag.Title = "Login";
}

<h2 class="page-header">登入</h2>
<div class="container">
    <form role="form" method="post" class="col-sm-6">
        <div class="form-group">
            <label for="exampleInputEmail1">電子郵件</label>
            <input type="email" class="form-control"  name="InputEmail" placeholder="輸入電子郵件" >
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">密碼</label>
            <input type="Password" name="password" class="form-control"  placeholder="測試用免輸入 輸入自己的mail後即可登入 登入後可以點選右上角登入名稱改密碼">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="true" name="RememberMe" /> 記住我
                <input type="hidden" value="false" name="RememberMe" /> 
            </label>
        </div>
        <button type="submit" class="btn btn-default">登入</button>
    </form>
</div>