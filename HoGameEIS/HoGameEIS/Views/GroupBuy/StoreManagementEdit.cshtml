@{
    ViewBag.Title = "StoreManagementEdit";
}

@Html.Partial("_GroupBuyNav")

<h4 class="page-header">店家基本資料</h4>

<div>
    <div class="col-sm-10 col-xs-12 col-md-8 col-lg-6">
        <form role="form" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">店家名稱</label>
                <input type="text" class="form-control" name="StoreName" placeholder="輸入店家名稱">
                <label for="exampleInputEmail1">電話</label>
                <input type="text" class="form-control" name="Tel" placeholder="輸入電話">
                <label for="exampleInputEmail1">地址</label>
                <input type="text" class="form-control" name="Address" placeholder="輸入地址">
                <label for="exampleInputEmail1">備註</label>
                <input type="text" class="form-control" name="Memo" placeholder="輸入備註">
                <label for="exampleInputEmail1">分類</label>
                <div class="radio">
                    <label>
                        <input type="radio" name="Category" value="meal" checked>正餐
                    </label>
                    <label>
                        <input type="radio" name="Category" value="drink">飲料
                    </label>
                    <label>
                        <input type="radio" name="Category" value="dessert">點心
                    </label>
                    <label>
                        <input type="radio" name="Category" value="groupbuy">團購
                    </label>
                    <label>
                        <input type="radio" name="Category" value="party">活動
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-default">新增/修改</button>
        </form>

    </div>
</div>


